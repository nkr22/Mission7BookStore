@{
}
@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">
        <ul>
            <li>Book Author: @Model.Author</li>
            <li>Book Publisher: @Model.Publisher</li>
            <li>Book ISBN: @Model.Isbn</li>
            <li>Book Classification: @Model.Classification</li>
            <li>Book Category: @Model.Category</li>
            <li>Book Page Count: @Model.PageCount</li>
        </ul>
        <form method="post" asp-page="/Cart">

            <input type="hidden" asp-for="@Model.BookId" />
            <input type="hidden" name="returnURL" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

            <span class="card-text">
                <button type="submit" class="btn btn-success btn-sm float-right">Add to Cart</button>
            </span>
        </form>
    </div>
</div>

