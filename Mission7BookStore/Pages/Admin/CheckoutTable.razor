<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr><th colspan="5" class="text-center">@TableTitle</th></tr>
    </thead>
    <tbody>
        @if (Checkouts?.Count() > 0)
        {
            @foreach (Checkout c in Checkouts)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Zip</td>
                    <th>Product</th>
                    <th>Quantity</th>
                    <td>
                        <button class="btn btn-sm btn-danger"
                                @onclick="@(e => OrderSelected.InvokeAsync(c.CheckoutId))">
                            @ButtonLabel
                        </button>
                    </td>
                </tr>
                @foreach (BasketLineItem line in c.Lines)
                {
                    <tr>
                        <td colspan="2"></td>
                        <td>@line.Book.Title</td>
                        <td>@line.Quantity</td>
                        <td></td>
                    </tr>
                }
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center">No Orders</td></tr>
        }
    </tbody>
</table>
@code {
    [Parameter]
    public string TableTitle { get; set; } = "Orders";
    [Parameter]
    public IEnumerable<Checkout> Checkouts { get; set; }
    [Parameter]
    public string ButtonLabel { get; set; } = "Ship";
    [Parameter]
    public EventCallback<int> OrderSelected { get; set; }
}
